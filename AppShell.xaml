<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ristinolla01.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ristinolla01"
    Shell.FlyoutBehavior="Disabled">

    <!-- PelaajanTiedot sivu ensimmäisenä -->
    <ShellContent
        Title="Pelaajan Tiedot"
        ContentTemplate="{DataTemplate local:PelaajanTiedotPage}"
        Route="pelaajaInfo" />

    <!-- MainPage/Ristinolla sivu -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="mainGame" />

</Shell>
